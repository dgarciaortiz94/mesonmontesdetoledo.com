<div id="edit-container" class="p-3">
    <div class="py-2 section-box__title d-flex justify-content-between align-items-center">
        <p class="h5"><i class="fas fa-user-alt"></i>&nbsp Perfil</p>
        <div class="d-flex">
            <div type="button" id="edit-profile-button"><i class="fas fa-edit text-warning"></i></div>
        </div>
    </div>

    <div>
        <div class="sidebar-profile-img mb-3" style="background-image: url({{ asset('resources/media/admin/profiles/'~app.user.image) }});"></div>
        
        <div class="d-flex">
            <b>Email: </b>
            <p class="ms-2">{{ user.email }}</p>
        </div>

        <div class="d-flex">
            <b>Nombre: </b>
            <p class="ms-2">{{ user.name }}</p>
        </div>

        <div class="d-flex">
            <b>Primer apellido: </b>
            <p class="ms-2">{{ user.firstname }}</p>
        </div>

        <div class="d-flex">
            <b>Segundo apellido: </b>
            <p class="ms-2">{{ user.lastname }}</p>
        </div>
    </div>
</div>



<script>
    var editProfileButton = document.getElementById("edit-profile-button");

    editProfileButton.addEventListener('click', e => {
        var htmlWrapper = $("#profile-sidenav-body");
        
        const loader = '<div class="d-flex justify-content-center align-items-center h-100">' +
                            '<div class="spinner-border" role="status">' +
                                '<span class="visually-hidden">Loading...</span>' +
                            '</div>' +
                        '</div>';

        // document.getElementById.html(loader);

        $.ajax({
            url : "{{ path('app_profile_edit', {'id': app.user.id}) }}",
            type : 'GET',
            dataType : 'html',
            success : function(html) {
                htmlWrapper.html(html);
            },
            error : function(xhr, status) {
                console.log(xhr.responseText);
            }
        });
    })
</script>
