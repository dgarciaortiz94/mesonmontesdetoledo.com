{% extends 'user/base.html.twig' %}

{% block section %}
    <h1>User index</h1>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>CreationDate</th>
                <th>IsActive</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="{% if(user.isActive) %}bg-danger text-light{% endif %}">
                <td><a href="{{ path('app_user_show', {'id': user.id}) }}">{{ user.id }}</a></td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.creationDate ? user.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                <td><a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></td>
                <td><a href="{{ path('app_user_edit', {'id': user.id}) }}">desbloquear</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
